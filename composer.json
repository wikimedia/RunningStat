{
	"name": "wikimedia/running-stat",
	"description": "PHP implementations of online statistical algorithms",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/RunningStat",
	"authors": [
		{
			"name": "Ori Livneh",
			"email": "ori@wikimedia.org"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\": "src/"
		}
	},
	"require": {
		"php": ">=8.1.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.7.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "10.5.58",
		"wikimedia/testing-access-wrapper": "^3.0.0 || ^4.0.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"@phpunit",
			"covers-validator",
			"@phpcs",
			"phan --allow-polyfill-parser --long-progress-bar",
			"minus-x check ."
		],
		"changelog": "git log HEAD --format=\"* %s (%aN)\" --no-merges --not --tags | sort | grep -vE \"^\\* (build|docs?|tests?):\"",
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp",
		"phpunit": "phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
